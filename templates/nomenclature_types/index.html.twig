    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nomenclature_type in nomenclature_types %}
            <tr>
                <td>{{ nomenclature_type.id }}</td>
                <td>{{ nomenclature_type.Name }}</td>
                <td>
                    <a href="{{ path('app_nomenclature_types_show', {'id': nomenclature_type.id}) }}">show</a>
